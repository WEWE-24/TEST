-- Script execution
local function executeScriptFromUrl(url)
    status.Text = "â³ Loading..."
    local success, result = pcall(function()
        return game:HttpGet(url)
    end)

    if success then
        status.Text = "âš™ï¸ Running..."
        local func, err = loadstring(result)
        if func then
            local ok, execErr = pcall(func)
            status.Text = ok and "âœ… Executed." or ("âŒ Runtime error: " .. tostring(execErr))
        else
            status.Text = "âŒ Compile error: " .. tostring(err)
        end
    else
        status.Text = "âŒ Download error: " .. tostring(result)
    end
end

-- Create buttons
local buttons = {}
local function refreshButtons(filterText)
    filterText = filterText:lower()
    local totalSize = 0
    for _, data in ipairs(buttons) do
        local name = data.Name:lower()
        local match = name:find(filterText) ~= nil
        data.Button.Visible = match
        if match then
            totalSize += data.Button.AbsoluteSize.Y + layout.Padding.Offset
        end
    end
    container.CanvasSize = UDim2.new(0, 0, 0, totalSize)
end

for _, info in ipairs(scriptsList) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, 0, 0, 36)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 16
    btn.Text = info.Name
    btn.Parent = container
    Instance.new("UICorner", btn)

    btn.MouseButton1Click:Connect(function()
        executeScriptFromUrl(info.Url)
    end)

    table.insert(buttons, {Name = info.Name, Button = btn})
end

-- Search connect
search:GetPropertyChangedSignal("Text"):Connect(function()
    refreshButtons(search.Text)
end)
refreshButtons("")

-- Toggle with RightShift
UserInputService.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    if input.KeyCode == Enum.KeyCode.RightShift then
        frame.Visible = not frame.Visible
        status.Text = frame.Visible and "âœ… Menu open." or "ğŸ”’ Menu hidden."
    end
end)
unloadButton.MouseButton1Click:Connect(function()
    gui:Destroy()
end)
